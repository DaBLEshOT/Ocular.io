{
    "name": "Ocular.io",
    "description": "An easy tracker visualisation plugin giving you insight where your vulnerabilities lie",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "unlimitedStorage",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "views/popup.html"
    },
    "options_ui": {
        "page": "views/index.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "images/logo16.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
    }
}