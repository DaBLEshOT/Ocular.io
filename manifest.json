{
    "name": "Ocular.io",
    "description": "An easy tracker visualisation plugin giving you insight where your vulnerabilities lie",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "webRequest",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "views/popup.html"
    },
    "options_page": "views/index.html",
    "icons": {
        "16": "images/logo16.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
    }
}